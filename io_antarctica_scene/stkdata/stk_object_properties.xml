<?xml version="1.0"?>
<properties>
    <int id="my_int" label="My Integer" default="15" doc="A crazy integer variable"/>
    <float id="my_float" label="My Float" default="3.14159" doc="A crazy float variable"/>
    <bool id="my_bool" label="My Boolean" default="false" doc="A crazy boolean variable"/>
    <string id="my_string" label="My String" default="gugus" doc="A crazy string variable"/>
    <color id="my_color" label="My Color" default="1.0 0.5 0.2" doc="A crazy color variable"/>
    <enum id="my_enum" label="My Enum" default="o2" doc="A crazy enumerator">
        <item value="o1" label="Option 1"/>
        <item value="o2" label="Option 2"/>
        <item value="o3" label="Option 3"/>
    </enum>
    <object id="my_object1" label="My Object" filter="lambda o: o.name.startswith('C')" doc="A crazy object variable"/>
    <object id="my_object2" filter="lambda o: True" doc="A crazy object variable">Hello</object>
    <label id="my_label">This is a demo label!</label>

    <int    id="cond_int"
            label="Conditional Integer"
            default="15"
            doc="A conditional integer variable"
            bind="my_enum"
            condition="lambda e: e == 'o3'"/>

    <string id="cond_string"
            label="Conditional String"
            default="Sven"
            doc="A conditional string variable"
            bind="my_string my_int"
            condition="lambda i1, i2: i1 == 'Joergen' and i2 == 3"/>
</properties>
